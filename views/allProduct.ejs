<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>All Product</title>
    <style>
        body {
            padding: 20px;
        }

        h1 {
            text-align: center;
        }

        form {
            margin-bottom: 20px;
        }

        table {
            margin-top: 20px;
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/store">Store</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/product">All Product</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/">Log Out</a>
                </li>
            </ul>
        </div>
    </nav>
    <hr>

    <!-- JUDUL -->
    <h1>All Product</h1>
    <hr>

    <!-- SEARCH -->
    <form action="/product" class="form-inline">
        <input type="text" name="search" class="form-control mr-sm-2" placeholder="Search by Product Name">
        <button type="submit" class="btn btn-primary">Search</button>
        <a href="/product" class="btn btn-secondary ml-2">Clear Search</a>
    </form>

    <!-- TABLE -->
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Product Name</th>
                <th scope="col">Store Name</th>
                <th scope="col">Category</th>
                <th scope="col">Stock</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(el => { %>
            <tr>
                <td><%= el.name %></td>
                <td><%= el.Store.name %></td>
                <td><%= el.Store.category %></td>
                <td><%= el.stock %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-rbsm/5P1lI6g64xZ6wNfF5Px4FdmYF5FZiO/HP8Zjfu6eC5Y+gnazpQgSzUpJlKZ8P"
        crossorigin="anonymous"></script>
</body>
</html>
