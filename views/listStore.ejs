<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title>Store List</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/store">Store</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/product">All Product</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Log Out</a>
        </li>
        <li class="nav-item">
          <% data1.forEach(el=>{ %>
            <a class="nav-link" href="/register/<%=el.id%>/edit">Edit Profile</a>
            <%  }) %> 
        </li>
      </ul>
    </div>
  </nav>
  <hr>

  <h1>Store List</h1>
  <a href="/store/add/">
    <button type="button" class="btn btn-primary" >Add Store</button>  
  </a>
  <p style="text-align: right; color: red"> <% if(msg){ %>
     <%= msg %>
<% } %> </p>
  <hr>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Kategori</th>
        <th scope="col">Since</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <% store.forEach(el => { %>
    <tbody>
      <tr>
        <td><%= el.name %></td>
        <td><%= el.category %></td>
        <td><%= convertDate(el.since) %></td>
        <td><a href="/store/<%= el.id %>">
          <button type="button" class="btn btn-primary" >See Product</button>    
        </a>
        </td>
      </tr>
    </tbody>
    <% }) %>
  </table>
</body>

</html>