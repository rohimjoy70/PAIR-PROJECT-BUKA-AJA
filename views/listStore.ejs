<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
      <title>Store List</title>
   </head>

   <body>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
         <a class="navbar-brand" href="/store">Store</a>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
               <li class="nav-item">
                  <a class="nav-link" href="/product">All Product</a>
               </li>
               <li class="nav-item">
                  <a class="nav-link" href="/logout">Log Out</a>
               </li>
               <li class="nav-item">
                  <% data1.forEach(el=>{ %>
                  <a class="nav-link" href="/register/<%=el.id%>/edit">Edit Profile</a>
                  <% }) %>
               </li>
            </ul>
         </div>
      </nav>
      <hr />

      <div class="container mt-4">
         <h1>Store List</h1>
         <a href="/store/add/">
            <button type="button" class="btn btn-primary">Add Store</button>
         </a>
         <p class="text-end text-danger"><% if(msg){ %><%= msg %><% } %></p>
         <hr />

         <table class="table">
            <thead class="thead-dark">
               <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Category</th>
                  <th scope="col">Since</th>
                  <th scope="col">Action</th>
               </tr>
            </thead>
            <tbody>
               <% store.forEach(el => { %>
               <tr>
                  <td><%= el.name %></td>
                  <td><%= el.category %></td>
                  <td><%= convertDate(el.since) %></td>
                  <td>
                     <a href="/store/<%= el.id %>">
                         <button type="button" class="btn btn-primary" style="margin-right: 5px;">See Product</button>
                     </a>
                     <a href="/store/delete/<%= el.id %>">
                         <button type="button" class="btn btn-danger" style="margin-left: 5px;">Delete</button>
                     </a>
                 </td>
               </tr>
               <% }) %>
            </tbody>
         </table>
      </div>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-rbsm/5P1lI6g64xZ6wNfF5Px4FdmYF5FZiO/HP8Zjfu6eC5Y+gnazpQgSzUpJlKZ8F" crossorigin="anonymous"></script>
   </body>
</html>
