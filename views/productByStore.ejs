<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title>Otw Buka List</title>
</head>
  <style>
    
      
    
  </style>
<body>

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/store">Store</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/product">All Product</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/">Log Out</a>
        </li>
      </ul>
    </div>
  </nav>
  <hr>

  <!-- JUDUL -->
  <h1 style="text-align: center;">BukaBesok</h1>
  <h3 style="text-align: center;"><%=store.code%></h3>
  <hr>

  <!-- TABLE -->
  <div class="row" style="margin :10px">
    <% data.forEach(el => { %>
        <div class="card" style="width: 18rem;" style="margin :10px">
          <img class="card-img-top" src="<%= el.imageURL %>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= el.name %></h5>
            <p class="card-text"><%= el.description %></p>
            <h6 class="card-title" >STOCK : <%= el.stock %></h6>
            <h6 class="card-title" >Price : <%= money.rupiah(el.price) %></h6>
            <a href="/product/buy/<%= el.id %>" class="btn btn-primary">Buy</a>
            <a href="/product/delete/<%= el.id %>" class="btn btn-primary">Delete</a>
          </div>
        </div>
      
    <% }) %>
  </div>
</body>

</html>